import argparse
import matplotlib.pyplot as plt
import cytograph.utils

if __name__ == '__main__':
	parser = argparse.ArgumentParser(description='Plot an heatmap from a .markers file')
	parser.add_argument('file_path', metavar='path', type=str, help='The path to a loom-formatted .markers file')
	args = parser.parse_args()
	if "markers" in args.file_path:
		cytograph.utils.plot_markers_file( args.file_path )
		plt.show()
	else:
		raise IOError("file name is not correct, extension must be .markers")